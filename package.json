{
  "name": "blog",
  "version": "0.1.101",
  "homepage": "https://philp.io",
  "repository": "https://github.com/chrismphilp/philp.io",
  "description": "My personal blog",
  "author": "Chris Philp",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"**/*.tsx\"",
    "dev": "next dev",
    "patch": "npm version --no-commit-hooks --no-git-tag-version patch && git add package.json package-lock.json && git commit -m \"[main] | Bumping version\"",
    "build": "next build",
    "postbuild": "next-sitemap",
    "start": "npx serve@latest out",
    "static": "next build && next-image-export-optimizer",
    "lint": "next lint"
  },
  "pre-push": [
    "format",
    "lint",
    "patch"
  ],
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=18.17.0"
  },
  "dependencies": {
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@next/mdx": "^15.5.4",
    "@tailwindcss/postcss": "^4.1.14",
    "@tailwindcss/typography": "^0.5.19",
    "dayjs": "^1.11.18",
    "framer-motion": "^12.23.24",
    "gray-matter": "^4.0.3",
    "next": "^15.5.4",
    "next-image-export-optimizer": "^1.19.0",
    "next-mdx-remote": "^5.0.0",
    "next-pwa": "^5.6.0",
    "next-themes": "^0.4.6",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-ga": "^3.3.1",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "reading-time": "^2.0.0-1",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-img-size": "^1.0.1",
    "rehype-pretty-code": "^0.14.1",
    "rehype-shiki": "^0.0.9",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "sass": "^1.93.2",
    "sharp": "^0.34.4",
    "shiki": "^0.14.7"
  },
  "devDependencies": {
    "@types/node": "^22.18.9",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "eslint": "^9.37.0",
    "eslint-config-next": "^15.5.4",
    "pre-push": "^0.1.4",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.9.3",
    "vercel": "^48.2.9"
  }
}
